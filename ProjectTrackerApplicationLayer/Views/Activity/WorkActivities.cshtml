@using ProjectTrackerBusinessLayer.Entities;
@using System.Linq;
@using System.Collections.Generic;
@model List<Activity>;

<h1 class="text-center">Work Changes</h1>
<br />
<br />
<hr />
<div class="row justify-content-center">
    <div class="col-12">
        <div class="card shadow mb-4 my-2">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover cell-border" id="WorkActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr class="font-weight-bolder">
                                <th>
                                    Work Name
                                </th>
                                <th>
                                    Work Description
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Files Name
                                </th>
                                <th>
                                    Team Leader note
                                </th>
                                <th>
                                    Date & Time
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var activity in Model)
                                {
                                    <tr>
                                        <td> @activity.WorkTitle</td>
                                        <td> @activity.WorkDescription</td>
                                        <td> @activity.Status.Name</td>
                                        <td> @activity.AttachmentName</td>
                                        <td>@activity.TeamLeaderWorkNote</td>
                                        <td>@activity.DateTime</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
