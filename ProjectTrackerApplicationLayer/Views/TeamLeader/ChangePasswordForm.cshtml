@using ProjectTrackerApplicationLayer.DTO

@model ChangePasswordDTO

<h2 class="text-center">Change Team Leader Password</h2>
<br />
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <form asp-action="ChangingPassword">
                <div asp-validation-summary="All" class="text-danger"></div>
                @Html.HiddenFor(x=>x.UserID)
                <div class="form-group">
                    <label asp-for="FullName" class="label-control"></label>
                    <input asp-for="FullName" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="label-control"></label>
                    <input asp-for="Email" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="label-control"></label>
                    <input  asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="label-control"></label>
                    <input autocomplete ="new-password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPassord" class="label-control"></label>
                    <input asp-for="ConfirmNewPassord" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassord" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-outline-info" />
                </div>
            </form>
        </div>
    </div>
</div>


